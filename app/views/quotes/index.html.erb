<h1>Pithy quotes</h1>

<% @quote.each do |quote| %>
  <section class="quote-container">
    <blockquote class="quote">
      <%= quote.text %>
      <footer class="author">
        <%= quote.author %>
      </footer>
    </blockquote>
    <div class="created">
      <% if quote.created_at %>
        <p>Assigned <%= time_ago_in_words(quote.created_at)  %> ago </p>
      <% else %>
        <p> <%= time_ago_in_words(Time.now) %> </p>
      <% end %>    </div>
  </section>
<% end %>
